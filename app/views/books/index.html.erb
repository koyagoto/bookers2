<div class="container">
  <div class="row">
    
    <div class='col-xs-3'>
      <h1>books index</h1>
      <h1>User info</h1>
              <%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "profile-img", fallback: "no_image.jpeg" ,size:'150x150'%>
          <table class="table">
              <tr>
                  <td><p>name</p></td>
                  <td><p><%= current_user.name%></p></td>
              </tr>
              <tr>
                  <td><p>introduction</p></td>
                  <td><p><%= current_user.introduction%></p></td>
              </tr>
          </table>

          <p><%= link_to "編集", edit_user_path(current_user) %></p><br>

      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
      <%= render 'layouts/flash_messages' %>
       
          <h5>Title</h5>
          <%= f.text_field :title %>
       
          <h5>Opinion</h5>
          <%= f.text_area :body %>
       
          <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class='col-xs-9'>
      <h2>Books</h2>
      <table class="table table-striped" border="1">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book|%>
              <tr>
                <td><%= link_to user_path(book.user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image.jpg" ,size:'50x50'%>
                    <% end %>
                </td>
                <td><%= link_to book.title,book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <%end%>
          </tbody>
        </table>
    </div>

  </div>
</div>
